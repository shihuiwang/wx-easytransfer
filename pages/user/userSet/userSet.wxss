/* pages/user/userSet/userSet.wxss */
page{
    background: #EFEFEF;
}
.contain{
    padding: 15px;
    font-size: 14px;
}
.info-img{
    width: 128rpx;
    height: 128rpx;
}
.uset-top{
    display: flex;
    flex-direction: row;
    padding: 10px;
    box-sizing: border-box;
    background: #fff;
}
.utop-title{
    font-size: 16px;
    margin-bottom: 40rpx;
}
.info-name{
    display: flex;
    flex-direction: column;
    padding-left: 10px;
}
.uset-item{
    display: flex;
    flex-direction: column;
    background: #fff;
    margin-top: 10px;
}
.uset-item>view{
    line-height: 38px;
    border-bottom: 1px solid #ccc;
    padding: 0 15px 0 5px;
}
.item{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}