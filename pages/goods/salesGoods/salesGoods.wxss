/* pages/goods/salesGoods/salesGoods.wxss */
.contain{
    padding: 0 15px;
    font-size: 14px;
    height: 100%;
}
.info-img{
    width: 128rpx;
    height: 128rpx;
}
.goods-index{
    height: 89%;
}
.index-box{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    padding: 10px;
    box-sizing: border-box;
    background: #fff;
    border-bottom: 1px solid #ccc;
}
.title{
    font-size: 16px;
    margin-bottom: 40rpx;
}
.info-name{
    display: flex;
    flex-direction: column;
    padding-left: 10px;
    flex-grow: 1;
}
.price{
    color: #09CB96;
}
.cart{
    width: 20px;
    height: 20px;
}
.cart-top{
    border-top: 1px solid #ccc;
    line-height: 30px;
}
.cart-spec{
    line-height: 30px;
    background: #e74c3c;
    color: #fff;
    display: inline-block;
    padding: 0 10px;
    border-radius: 5px;
    margin-bottom: 10px;
}
.cart-num{
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 10px 0 0 0;
    border-top: 1px solid #ccc;
}
.cart-num>.btn{
    background: #ccc;
    display: inline-block;
    padding: 0 8px;
    font-size: 24px;
    color: #38434A;
    font-weight: bold;
}
.cart-num>input{
    border-bottom: 1px solid #ccc;
    width: 100px;
    text-align: center;
}
.cart-num-top{
    margin-right: 30px;
}
.search-group{
    width: 100%;
}
.all-goods-tips{
    line-height: 30px;
}
.scan{
    width: 40px;
    height: 40px;
    position: fixed;
    bottom: 100px;
    right: 80px;
}
