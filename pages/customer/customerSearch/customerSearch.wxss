/* pages/customer/customerSearch/customerSearch.wxss */
@import "../customerIndex/customerIndex.wxss";
.search-group{
    margin-top: 5px;
    margin-bottom: 15px;
}
.search-group input{
    flex-grow: 1;
    height: 35px;
    padding: 0 8px;
}
.search-btn{
    background: #e74c3c;
    height: 32px;
    width: 60px;
    line-height: 32px;
    font-size: 14px;
    color: #fff;
    padding: 0;
}
.item-group{
    margin-bottom: 0;
}
.history{
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    padding: 0 15px;
}
.his-title{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid #ccc;
    line-height: normal;
}
.his-body{
    display: flex;
    flex-direction: row;
    align-items: center;
    flex-wrap: wrap;
    padding-top: 10px;
}
.his-body text{
    border: 1px solid #ccc;
    padding: 5px 8px;
    margin-right: 10px;
    margin-bottom: 8px;
    line-height: normal;
}