/* pages/order/orderDelivery/orderDelivery.wxss */
page{
    background: #EFEFEF;
}
.contain{
    padding: 15px;
    font-size: 14px;
}
.title{
    font-size: 16px;
    border-bottom: 2px solid #ccc;
    padding: 8px;
    background: #fff;
}
.details{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    background: #fff;
    padding: 8px;
}
.details>text{
    width: 30%;
    padding: 5px 7px;
    box-sizing: border-box;
}
.details>.itemr{
    width: 70%;
}
.oparet, .between{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}
.oparet{
    margin-top: 10px;
    background: #fff;
    padding: 10px;
}
.goods-list{
    display: flex;
    flex-direction: column;
    line-height: 25px;
    background: #fff;
    padding: 5px 10px 10px 10px;
    border-top: 1px solid #ccc;
}
