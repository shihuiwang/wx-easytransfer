/* pages/user/account/account.wxss */
page{
    background: #EFEFEF;
}
.contain{
    padding: 15px;
    font-size: 14px;
}
.info-img{
    width: 128rpx;
    height: 128rpx;
}
.uset-top{
    display: flex;
    flex-direction: row;
    padding: 10px;
    box-sizing: border-box;
    background: #fff;
}
.utop-title{
    font-size: 16px;
    margin-bottom: 80rpx;
}
.info-name{
    display: flex;
    flex-direction: column;
    padding-left: 10px;
}
.account-item{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    margin-top: 10px;
    background: #fff;
}
.account-item>text{
    width: 50%;
    line-height: 35px;
    border-bottom: 1px solid #ccc;
    padding: 0 10px;
    box-sizing: border-box;
}
